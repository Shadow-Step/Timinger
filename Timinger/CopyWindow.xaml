<Window x:Class="Timinger.CopyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Timinger"
        mc:Ignorable="d"
        Title="CopyWindow" Height="268.052" Width="465.156" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.50*"/>
        </Grid.ColumnDefinitions>
        
        <TextBox x:Name="CopyBox" HorizontalAlignment="Stretch" Margin="10,10,5,10" TextWrapping="Wrap" VerticalAlignment="Stretch"/>
        <GroupBox Header="Filters" Grid.Column="1">
        <StackPanel Orientation="Vertical" Margin="5 10 10 10">
            <CheckBox x:Name="TargetCheckBox" Content="Target name" Checked="BuildText" Unchecked="BuildText" IsChecked="True"/>
            <CheckBox x:Name="AttackNameCheckBox" Content="Attack name" Checked="BuildText" Unchecked="BuildText" IsChecked="False"/>
            <CheckBox x:Name="ArmyTypeCheckBox" Content="Army type" Checked="BuildText" Unchecked="BuildText" IsChecked="False"/>
        </StackPanel>
        </GroupBox>
    </Grid>
</Window>
